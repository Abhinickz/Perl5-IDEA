<templateSet group="Perl5 Method::Signatures::Simple">
    <template name="method" value="method $NAME$ ($SIGNATURE$)&#10;{&#10;    $END$&#10;}"
              description="method definition" toReformat="true" toShortenFQNames="true">
        <variable name="NAME" expression="" defaultValue="" alwaysStopAt="true"/>
        <variable name="SIGNATURE" expression="" defaultValue="" alwaysStopAt="true"/>
        <context>
            <option name="PERL5_PREFIX" value="true"/>
        </context>
    </template>
    <template name="func" value="func $NAME$ ($SIGNATURE$)&#10;{&#10;    $END$&#10;}" description="function definition"
              toReformat="true" toShortenFQNames="true">
        <variable name="NAME" expression="" defaultValue="" alwaysStopAt="true"/>
        <variable name="SIGNATURE" expression="" defaultValue="" alwaysStopAt="true"/>
        <context>
            <option name="PERL5_PREFIX" value="true"/>
        </context>
    </template>
</templateSet>